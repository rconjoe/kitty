# hide_window_decorations titlebar-only
dynamic_background_opacity yes
background_opacity 0.95
# background_image ~/.config/kitty/background.png
# background_image_layout scaled
# background_tint 0.98
font_family mononokiNerdFontCompleteM-Regular 
bold_font mononokiNerdFontCompleteM-Bold
italic_font mononokiNerdFontCompleteM-Italic
bold_italic_font mononokiNerdFontCompleteM-BoldItalic
<ESC>[4:1m
# modify_font underline_position -2
modify_font underline_thickness 124%
modify_font strikethrough_position 2px


allow_remote_control true

font_size 10
# adjust_line_height 90%
# adjust_column_width 94%

tab_bar_edge top
tab_bar_align left
tab_bar_style custom
tab_bar_min_tabs 1
tab_activity_symbol none
tab_separator ""
tab_bar_margin_width 0.0
tab_bar_margin_height 0.0 0.0
tab_title_template "{f'{title[:30]}…' if title.rindex(title[-1]) + 1 > 30 else (title.center(6) if (title.rindex(title[-1]) + 1) % 2 == 0 else title.center(5))}"
active_tab_font_style   bold

enable_audio_bell yes
bell_on_tab yes
window alert_on_bell yes

map ctrl+1 goto_tab 1
map ctrl+2 goto_tab 2
map ctrl+3 goto_tab 3
map ctrl+4 goto_tab 4
map ctrl+5 goto_tab 5
map ctrl+6 goto_tab 6
map ctrl+7 goto_tab 7
map ctrl+8 goto_tab 8
map ctrl+9 goto_tab 9
map ctrl+\ select_tab
map cmd+alt+w kitten wiki.py


# BEGIN_KITTY_THEME
# Rosé Pine
include current-theme.conf
# END_KITTY_THEME
